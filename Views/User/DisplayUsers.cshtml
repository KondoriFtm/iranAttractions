@model List<iranAttractions.Models.User>

@{
    Layout = "_Layout1";
}



           
                <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">مدیریت کاربران</h1>
                </div>

                <canvas class="my-4 w-100 chartjs-render-monitor" id="myChart" width="905" height="30" style="display: block; width: 905px; height: 30px;"></canvas>
               
                <div class="table-responsive">
                 
                    <table class="table table-striped table-sm">
                       
                        <thead>
                            <tr>
                                <th scope="col">phonenumber</th>
                                <th scope="col">نام کاربری</th>
                                <th scope="col">رمز عبور</th>
                                <th scope="col">حذف</th>
                            </tr>
                        </thead>

                        <tbody>
                       @foreach(var user in Model)
                       {
                            <tr>
                                <td>@user.Phonenumber</td>
                                <td>@user.UserName</td>
                                <td>@user.password</td>
                                <td>
                                    <a class="delete-button" asp-action="DeleteUser" asp-route-phonenumber="@user.Phonenumber">حذف کردن</a>

                                </td>
                            </tr>
                       }
                     
                        </tbody>
                    </table>
                </div>
          
       

  
