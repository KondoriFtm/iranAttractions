@model List<iranAttractions.Models.Comment>

@{
    Layout = "_Layout1";
}





<div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">نظرات</h1>
</div>

<canvas class="my-4 w-100 chartjs-render-monitor" id="myChart" width="905" height="30" style="display: block; width: 905px; height: 30px;"></canvas>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">کاربر</th>
                <th scope="col">تاریخ</th>
                <th scope="col">نام استان</th>
                <th scope="col">نام جاذبه</th>
                <th scope="col">نظر</th>
                <th scope="col">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Users.UserName</td>
                    <td>@item.Date</td>
                    <td>@item.Sightseeings.City.Name</td>
                    <td>@item.Sightseeings.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="ConfirmComments" asp-controller="Comments" asp-route-id="@item.Id">انتشار</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Comments" asp-route-id="@item.Id">ویرایش</a>
                        <a class="btn btn-danger btn-sm" asp-action="DeleteComments" asp-controller="Comments" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
