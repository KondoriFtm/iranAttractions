@model IEnumerable<iranAttractions.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td> 
                @Html.DisplayFor(modelItem=> item.Phonenumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Phonenumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Phonenumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Phonenumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
